@using eTicaret.Models
@model List<Kampanya>
@{
    ViewData["Title"] = "Kampanya Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>🎁 Kampanya Yönetimi</h2>
        <a href="/Kampanya/Ekle" class="btn btn-success">➕ Yeni Kampanya Ekle</a>
    </div>

    @if (TempData["Basarili"] != null)
    {
        <div class="alert alert-success">@TempData["Basarili"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Kampanya Adı</th>
                    <th>İndirim Oranı</th>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var kampanya in Model)
                    {
                        <tr>
                            <td>@kampanya.KampanyaID</td>
                            <td>@kampanya.KampanyaAdi</td>
                            <td><strong>%@kampanya.IndirimOrani</strong></td>
                            <td>@kampanya.BaslangicTarihi.ToString("dd.MM.yyyy")</td>
                            <td>@kampanya.BitisTarihi.ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (kampanya.Aktif)
                                {
                                    <span class="badge bg-success">✅ Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">❌ Pasif</span>
                                }
                            </td>
                            <td>
                                <a href="/Kampanya/AktifPasif/@kampanya.KampanyaID" class="btn btn-sm btn-warning">
                                    @(kampanya.Aktif ? "Pasifleştir" : "Aktifleştir")
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">Henüz kampanya yok.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a href="/Admin/Index" class="btn btn-secondary mt-3">⬅️ Admin Panel</a>
</div>