<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Ticaret</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/favicon.png">
    <link rel="shortcut icon" type="image/png" href="~/images/favicon.png">

    <!-- SEO Meta Tags -->
    <meta name="description" content="En kaliteli ürünleri en uygun fiyatlarla bulabileceğiniz online alışveriş sitesi. Elektronik, giyim, kitap ve daha fazlası.">
    <meta name="keywords" content="e-ticaret, online alışveriş, elektronik, giyim, kitap, kampanya">
    <meta name="author" content="E-Ticaret">
    <meta name="robots" content="index, follow">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="@ViewData["Title"] - E-Ticaret">
    <meta property="og:description" content="En kaliteli ürünleri en uygun fiyatlarla bulabileceğiniz online alışveriş sitesi">
    <meta property="og:image" content="~/images/favicon.png">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@ViewData["Title"] - E-Ticaret">
    <meta name="twitter:description" content="En kaliteli ürünleri en uygun fiyatlarla bulabileceğiniz online alışveriş sitesi">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6366f1;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --dark-color: #1f2937;
            --light-bg: #f9fafb;
            --card-shadow: 0 10px 30px rgba(0,0,0,0.1);
            --card-hover-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            background-attachment: fixed;
            min-height: 100vh;
        }

        .top-navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 1rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .navbar-brand i {
                font-size: 2rem;
                background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .nav-link {
            color: var(--dark-color) !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                color: white !important;
                transform: translateY(-2px);
            }

        .btn-gradient {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        }

            .btn-gradient:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 25px rgba(99, 102, 241, 0.4);
                color: white;
            }

        .btn-outline-gradient {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            background: transparent;
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-outline-gradient:hover {
                background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                color: white;
                border-color: transparent;
                transform: translateY(-2px);
            }

        .content-wrapper {
            background: white;
            min-height: calc(100vh - 200px);
            border-radius: 20px;
            margin: 2rem auto;
            padding: 2rem;
            box-shadow: var(--card-shadow);
            max-width: 1400px;
        }

        .product-card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            height: 100%;
        }

            .product-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--card-hover-shadow);
            }

            .product-card img {
                transition: transform 0.5s ease;
            }

            .product-card:hover img {
                transform: scale(1.1);
            }

        .modern-footer {
            background: rgba(31, 41, 55, 0.95);
            backdrop-filter: blur(10px);
            color: white;
            padding: 3rem 0 1rem;
            margin-top: 3rem;
        }

        .footer-links {
            list-style: none;
            padding: 0;
        }

            .footer-links li {
                margin-bottom: 0.5rem;
            }

            .footer-links a {
                color: rgba(255,255,255,0.8);
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .footer-links a:hover {
                    color: var(--primary-color);
                    padding-left: 5px;
                }

        .social-icons a {
            width: 40px;
            height: 40px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            margin: 0 0.5rem;
            transition: all 0.3s ease;
        }

            .social-icons a:hover {
                background: var(--primary-color);
                transform: translateY(-5px);
            }

        .toast {
            min-width: 300px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            border: none;
            border-radius: 10px;
        }

        .toast-header {
            border-radius: 10px 10px 0 0;
            font-weight: 600;
        }

        .toast-body {
            padding: 1rem;
            background: white;
            border-radius: 0 0 10px 10px;
        }

        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--secondary-color);
            }
        /* RESPONSIVE DESIGN */
        @@media (max-width: 768px) {
            .navbar-brand 

        {
            font-size: 1.2rem;
        }

        .content-wrapper {
            padding: 1rem;
            margin: 1rem auto;
        }

        .hero-title {
            font-size: 2rem !important;
        }

        .hero-subtitle {
            font-size: 1rem !important;
        }

        .stat-number {
            font-size: 1.5rem !important;
        }

        .product-card {
            margin-bottom: 1rem;
        }

        .navbar-text {
            display: none;
        }

        .modern-footer {
            padding: 2rem 0 1rem;
        }

        .footer-links {
            margin-bottom: 1rem;
        }

        }

        @@media (max-width: 576px) {
            .btn-gradient, .btn-outline-gradient

        {
            padding: 0.4rem 1rem;
            font-size: 0.875rem;
        }

        .content-wrapper {
            border-radius: 10px;
        }

        .toast {
            min-width: 250px;
        }

        }
    </style>
</head>
<body>
    <!-- LOADING SPINNER -->
    <div id="loading" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.7); z-index: 10000; align-items: center; justify-content: center;">
        <div style="text-align: center;">
            <div class="spinner-border text-light" role="status" style="width: 4rem; height: 4rem;">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
            <p style="color: white; margin-top: 1rem; font-size: 1.2rem;">Yükleniyor...</p>
        </div>
    </div>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg top-navbar">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-shopping-bag"></i>
                <span>E-Ticaret</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home"></i> Ana Sayfa
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Sepet/Index">
                            <i class="fas fa-shopping-cart"></i> Sepetim
                        </a>
                    </li>
                    @if (Context.Session.GetString("KullaniciEmail") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Siparis/Siparislerim">
                                <i class="fas fa-box"></i> Siparişlerim
                            </a>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center gap-2">
                    @if (Context.Session.GetString("KullaniciEmail") != null)
                    {
                        <span class="navbar-text me-3">
                            <i class="fas fa-user-circle"></i>
                            <strong>@Context.Session.GetString("KullaniciAd")</strong>
                        </span>

                        @if (Context.Session.GetString("KullaniciRol") == "Admin")
                        {
                            <a href="/Admin/Index" class="btn btn-warning btn-sm rounded-pill">
                                <i class="fas fa-cog"></i> Admin
                            </a>
                        }

                        <a href="/Account/Logout" class="btn btn-outline-danger btn-sm rounded-pill">
                            <i class="fas fa-sign-out-alt"></i> Çıkış
                        </a>
                    }
                    else
                    {
                        <a href="/Account/Login" class="btn btn-outline-gradient btn-sm">
                            <i class="fas fa-sign-in-alt"></i> Giriş
                        </a>
                        <a href="/Account/Register" class="btn btn-gradient btn-sm">
                            <i class="fas fa-user-plus"></i> Kayıt Ol
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- CONTENT -->
    <div class="container">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="modern-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">
                        <i class="fas fa-shopping-bag"></i> E-Ticaret
                    </h5>
                    <p class="text-muted">
                        En kaliteli ürünleri en uygun fiyatlarla sizlere sunuyoruz.
                    </p>
                    <div class="social-icons mt-3">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Hızlı Linkler</h5>
                    <ul class="footer-links">
                        <li><a href="/"><i class="fas fa-chevron-right"></i> Ana Sayfa</a></li>
                        <li><a href="/Sepet/Index"><i class="fas fa-chevron-right"></i> Sepetim</a></li>
                        <li><a href="/Siparis/Siparislerim"><i class="fas fa-chevron-right"></i> Siparişlerim</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i> İletişim</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">İletişim</h5>
                    <ul class="footer-links">
                        <li><i class="fas fa-map-marker-alt"></i> İstanbul, Türkiye</li>
                        <li><i class="fas fa-phone"></i> +90 555 123 4567</li>
                        <li><i class="fas fa-envelope"></i> info@eticaret.com</li>
                    </ul>
                </div>
            </div>

            <hr style="border-color: rgba(255,255,255,0.1);">

            <div class="text-center pt-3">
                <p class="mb-0 text-muted">
                    &copy; 2024 E-Ticaret. Tüm hakları saklıdır.
                </p>
            </div>
        </div>
    </footer>

    <!-- TOAST CONTAINER -->
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
        @if (TempData["Basarili"] != null)
        {
            <div class="toast show" role="alert">
                <div class="toast-header bg-success text-white">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong class="me-auto">Başarılı</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    @TempData["Basarili"]
                </div>
            </div>
        }

        @if (TempData["Hata"] != null)
        {
            <div class="toast show" role="alert">
                <div class="toast-header bg-danger text-white">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong class="me-auto">Hata</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    @TempData["Hata"]
                </div>
            </div>
        }

        @if (TempData["Bilgi"] != null)
        {
            <div class="toast show" role="alert">
                <div class="toast-header bg-info text-white">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong class="me-auto">Bilgi</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    @TempData["Bilgi"]
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toast'ları 5 saniye sonra otomatik kapat
        document.addEventListener('DOMContentLoaded', function() {
            var toasts = document.querySelectorAll('.toast');
            toasts.forEach(function(toast) {
                setTimeout(function() {
                    var bsToast = bootstrap.Toast.getOrCreateInstance(toast);
                    bsToast.hide();
                }, 5000);
            });
        });

        // Form submit'lerde loading göster
        var forms = document.querySelectorAll('form');
        var loading = document.getElementById('loading');

        forms.forEach(function(form) {
            form.addEventListener('submit', function() {
                if (loading) {
                    loading.style.display = 'flex';
                }
            });
        });

        // Sayfa yüklendikten sonra loading'i gizle
        window.addEventListener('load', function() {
            if (loading) {
                loading.style.display = 'none';
            }
        });
    </script>
</body>
</html>