@using eTicaret.Models
@model List<Siparis>
@{
    ViewData["Title"] = "Sipariş Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📦 Sipariş Yönetimi</h2>
        <a href="/Admin/Index" class="btn btn-secondary">⬅️ Admin Panel</a>
    </div>

    @if (TempData["Basarili"] != null)
    {
        <div class="alert alert-success">@TempData["Basarili"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Sipariş No</th>
                    <th>Müşteri</th>
                    <th>Tarih</th>
                    <th>Toplam</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var siparis in Model)
                    {
                        <tr>
                            <td><strong>#@siparis.SiparisID</strong></td>
                            <td>@siparis.SiparisVeren?.Ad @siparis.SiparisVeren?.Soyad</td>
                            <td>@siparis.SiparisTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@siparis.ToplamTutar.ToString("C2")</td>
                            <td>
                                <select class="form-select form-select-sm" onchange="window.location.href='/Admin/SiparisDurumGuncelle?id=@siparis.SiparisID&durum=' + this.value">
                                    <option value="Beklemede" @(siparis.Durum == "Beklemede" ? "selected" : "")>⏳ Beklemede</option>
                                    <option value="Onaylandı" @(siparis.Durum == "Onaylandı" ? "selected" : "")>✅ Onaylandı</option>
                                    <option value="Kargoda" @(siparis.Durum == "Kargoda" ? "selected" : "")>🚚 Kargoda</option>
                                    <option value="Teslim Edildi" @(siparis.Durum == "Teslim Edildi" ? "selected" : "")>📦 Teslim Edildi</option>
                                </select>
                            </td>
                            <td>
                                <a href="/Siparis/Detay/@siparis.SiparisID" class="btn btn-sm btn-info">👁️ Detay</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Henüz sipariş yok.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>