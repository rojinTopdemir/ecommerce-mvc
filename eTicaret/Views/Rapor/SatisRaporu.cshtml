@using eTicaret.Models
@model List<Siparis>
@{
    ViewData["Title"] = "Detaylı Satış Raporu";
}

<style>
    .filter-card {
        background: white;
        padding: 1.5rem;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
    }

    .report-table {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }

    .summary-box {
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        padding: 1.5rem;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 2rem;
    }
</style>

<h2><i class="fas fa-file-invoice-dollar"></i> Detaylı Satış Raporu</h2>

<!-- FİLTRE -->
<div class="filter-card">
    <form method="get" action="/Rapor/SatisRaporu" class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Başlangıç Tarihi</label>
            <input type="date" name="baslangic" class="form-control" value="@ViewBag.BaslangicTarih">
        </div>
        <div class="col-md-4">
            <label class="form-label">Bitiş Tarihi</label>
            <input type="date" name="bitis" class="form-control" value="@ViewBag.BitisTarih">
        </div>
        <div class="col-md-4 d-flex align-items-end gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-filter"></i> Filtrele
            </button>
            <a href="/Rapor/SatisRaporuExcel?baslangic=@ViewBag.BaslangicTarih&bitis=@ViewBag.BitisTarih"
               class="btn btn-success">
                <i class="fas fa-file-excel"></i> Excel'e Aktar
            </a>
        </div>
    </form>
</div>

<!-- ÖZET -->
<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="summary-box">
            <h3>@ViewBag.ToplamSiparis</h3>
            <p class="mb-0">Toplam Sipariş</p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="summary-box">
            <h3>@ViewBag.ToplamCiro.ToString("C2")</h3>
            <p class="mb-0">Toplam Ciro</p>
        </div>
    </div>
</div>

<!-- TABLO -->
<div class="report-table">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Sipariş No</th>
                    <th>Tarih</th>
                    <th>Müşteri</th>
                    <th>Email</th>
                    <th>Durum</th>
                    <th>Tutar</th>
                    <th>Ürün Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var siparis in Model)
                    {
                        <tr>
                            <td><strong>#@siparis.SiparisID</strong></td>
                            <td>@siparis.SiparisTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@siparis.SiparisVeren?.Ad @siparis.SiparisVeren?.Soyad</td>
                            <td>@siparis.SiparisVeren?.Email</td>
                            <td>
                                @if (siparis.Durum == "Beklemede")
                                {
                                    <span class="badge bg-warning">@siparis.Durum</span>
                                }
                                else if (siparis.Durum == "Teslim Edildi")
                                {
                                    <span class="badge bg-success">@siparis.Durum</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@siparis.Durum</span>
                                }
                            </td>
                            <td><strong class="text-success">@siparis.ToplamTutar.ToString("C2")</strong></td>
                            <td>@(siparis.SiparisDetaylari?.Sum(sd => sd.Adet) ?? 0) adet</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Bu tarih aralığında sipariş bulunmuyor.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a href="/Rapor/Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Raporlara Dön
    </a>
</div>